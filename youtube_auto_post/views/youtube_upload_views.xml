<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_youtube_video_upload_tree" model="ir.ui.view">
        <field name="name">youtube.video.upload.tree</field>
        <field name="model">youtube.video.upload</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="state"/>
                <field name="schedule_date"/>
                <field name="youtube_video_id"/>
            </tree>
        </field>
    </record>

    <record id="view_youtube_video_upload_form" model="ir.ui.view">
        <field name="name">youtube.video.upload.form</field>
        <field name="model">youtube.video.upload</field>
        <field name="arch" type="xml">
            <form>
                 <header>
                        <button name="action_schedule_upload" type="object" string="Schedule Upload" class="oe_stat_button" icon="fa-clock-o" groups="base.group_user"/>
                        <button name="action_upload_now" type="object" string="Upload Now" class="oe_stat_button" icon="fa-upload" groups="base.group_user"/>
                    </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description" widget="text"/>
                        <field name="tags"/>
                        <field name="category_id"/>
                        <field name="privacy_status"/>
                        <!-- Upload Binary File -->
                        <field name="video_filename" invisible="True"/>
                        <field name="video_upload" filename="video_filename"/>
                        <field name="attachment_id" options="{'no_create': True}" readonly="True" force_save="True"/>
                        <field name="schedule_date"/>
                    </group>
                    <group>
                        <field name="state" readonly="1"/>
                        <field name="youtube_video_id" readonly="1"/>
                        <field name="error_message" readonly="1"/>
                    </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_youtube_video_upload" model="ir.actions.act_window">
        <field name="name">YouTube Video Uploads</field>
        <field name="res_model">youtube.video.upload</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Schedule and upload videos to YouTube.
            </p>
        </field>
    </record>

    <menuitem id="menu_youtube_video_upload" name="YouTube Uploads" action="action_youtube_video_upload" sequence="10"/>
</odoo>